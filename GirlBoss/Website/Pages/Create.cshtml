@page
@model CreateModel
@{

    ViewData["Title"] = "Create"; 
}

<h2> Create</h2>

<p> Enter your name: </p>

 
<form method ="POST">
    <div asp-validation-summary="All"></div>
    <div> First Name: <input asp-for="Customer.firstName"/> </div>
    <div> Last Name: <input asp-for="Customer.lastName" /> </div>
    <div> Email: <input asp-for="Customer.email" /> </div>

    <input type="submit"/> 
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
